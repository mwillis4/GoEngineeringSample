@model GoEngineerCodingExample.Models.PeopleModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="height" class="control-label"></label>
                <input asp-for="height" class="form-control" />
                <span asp-validation-for="height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mass" class="control-label"></label>
                <input asp-for="mass" class="form-control" />
                <span asp-validation-for="mass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hair_color" class="control-label"></label>
                <input asp-for="hair_color" class="form-control" />
                <span asp-validation-for="hair_color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="skin_color" class="control-label"></label>
                <input asp-for="skin_color" class="form-control" />
                <span asp-validation-for="skin_color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eye_color" class="control-label"></label>
                <input asp-for="eye_color" class="form-control" />
                <span asp-validation-for="eye_color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="birth_year" class="control-label"></label>
                <input asp-for="birth_year" class="form-control" />
                <span asp-validation-for="birth_year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gender" class="control-label"></label>
                <input asp-for="gender" class="form-control" />
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="homeworld" class="control-label"></label>
            </div>
            <div class="form-group">
                <select class="form-select" aria-label="Default select example" name="SelectedHomeworld">
                    @foreach (PlanetModel planetModel in Model.HomeworldOptions)
                    {
                        @if (Model.homeworld == planetModel.url)
                        {
                            <option value="@planetModel.url" selected>@planetModel.name</option>
                        }
                        else
                        {
                            <option value="@planetModel.url">@planetModel.name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="films" class="control-label"></label>
            </div>
            <div class="d-flex flex-wrap">
                @foreach (var film in Model.FilmOptions)
                {
                    <div style="margin-right: 15px">
                        <input class="form-check-input" type="checkbox" value="@film.url" name="selectedFilms" id="filmitem-@film.Id" checked="@Model.films.Contains(film.url)">
                        <label class="form-check-label" for="filmitem-@film.Id" style="margin-left: 5px">
                            @film.title
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="species" class="control-label"></label>
            </div>
            <div class="d-flex flex-wrap">
                @foreach (var species in Model.SpeciesOptions)
                {
                    <div style="margin-right: 15px">
                        <input class="form-check-input" type="checkbox" value="@species.url" name="selectedSpecies" id="speciesitem-@species.Id" checked="@Model.species.Contains(species.url)">
                        <label class="form-check-label" for="speciesitem-@species.Id" style="margin-left: 5px">
                            @species.name
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="vehicles" class="control-label"></label>
            </div>
            <div class="d-flex flex-wrap">
                @foreach (var vehicle in Model.VehicleOptions)
                {
                    <div style="margin-right: 15px">
                        <input class="form-check-input" type="checkbox" value="@vehicle.url" name="selectedVehicles" id="vehicleitem-@vehicle.Id" checked="@Model.vehicles.Contains(vehicle.url)">
                        <label class="form-check-label" for="vehicleitem-@vehicle.Id" style="margin-left: 5px">
                            @vehicle.name
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="starships" class="control-label"></label>
            </div>
            <div class="d-flex flex-wrap">
                @foreach (var starship in Model.StarShipOptions)
                {
                    <div style="margin-right: 15px">
                        <input class="form-check-input" type="checkbox" value="@starship.url" name="selectedStarShips" id="starshipitem-@starship.Id" checked="@Model.starships.Contains(starship.url)">
                        <label class="form-check-label" for="starshipitem-@starship.Id" style="margin-left: 5px">
                            @starship.name
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="created" class="control-label"></label>
                <input asp-for="created" class="form-control" />
                <span asp-validation-for="created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="edited" class="control-label"></label>
                <input asp-for="edited" class="form-control" />
                <span asp-validation-for="edited" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="url" class="control-label"></label>
                <input asp-for="url" class="form-control" />
                <span asp-validation-for="url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
