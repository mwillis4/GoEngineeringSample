@model IEnumerable<GoEngineerCodingExample.Models.PlanetModel>

@{
    ViewData["Title"] = "Planets";
}

<h1>Planets</h1>

<p>
    <a asp-action="Create">Create New Planet</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rotation_period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.orbital_period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.climate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.terrain)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rotation_period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orbital_period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.climate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.terrain)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
