@model GoEngineerCodingExample.Models.StarShipModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Starship</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="model" class="control-label"></label>
                <input asp-for="model" class="form-control" />
                <span asp-validation-for="model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="manufacturer" class="control-label"></label>
                <input asp-for="manufacturer" class="form-control" />
                <span asp-validation-for="manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cost_in_credits" class="control-label"></label>
                <input asp-for="cost_in_credits" class="form-control" />
                <span asp-validation-for="cost_in_credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="length" class="control-label"></label>
                <input asp-for="length" class="form-control" />
                <span asp-validation-for="length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="max_atmosphering_speed" class="control-label"></label>
                <input asp-for="max_atmosphering_speed" class="form-control" />
                <span asp-validation-for="max_atmosphering_speed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="crew" class="control-label"></label>
                <input asp-for="crew" class="form-control" />
                <span asp-validation-for="crew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="passengers" class="control-label"></label>
                <input asp-for="passengers" class="form-control" />
                <span asp-validation-for="passengers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cargo_capacity" class="control-label"></label>
                <input asp-for="cargo_capacity" class="form-control" />
                <span asp-validation-for="cargo_capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="consumables" class="control-label"></label>
                <input asp-for="consumables" class="form-control" />
                <span asp-validation-for="consumables" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hyperdrive_rating" class="control-label"></label>
                <input asp-for="hyperdrive_rating" class="form-control" />
                <span asp-validation-for="hyperdrive_rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MGLT" class="control-label"></label>
                <input asp-for="MGLT" class="form-control" />
                <span asp-validation-for="MGLT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="starship_class" class="control-label"></label>
                <input asp-for="starship_class" class="form-control" />
                <span asp-validation-for="starship_class" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:15px">
                <label asp-for="pilots" class="control-label"></label>
            </div>
            <div class="d-flex flex-wrap">
                @foreach (var pilot in Model.PilotOptions)
                {
                    <div style="margin-right: 15px">
                        <input class="form-check-input" type="checkbox" value="@pilot.url" name="selectedPilots" id="pilotitem-@pilot.Id">
                        <label class="form-check-label" for="pilotitem-@pilot.Id" style="margin-left: 5px">
                            @pilot.name
                        </label>
                    </div>
                }
            </div>
            <div class="form-group" style="margin-top:15px">
                <label asp-for="films" class="control-label"></label>
            </div>
            <div class="d-flex flex-wrap">
                @foreach(var film in Model.FilmOptions)
                {
                    <div style="margin-right: 15px">
                        <input class="form-check-input" type="checkbox" value="@film.url" name="selectedFilms" id="filmitem-@film.Id">
                        <label class="form-check-label" for="filmitem-@film.Id" style="margin-left: 5px">
                            @film.title
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="created" class="control-label"></label>
                <input asp-for="created" class="form-control" />
                <span asp-validation-for="created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="edited" class="control-label"></label>
                <input asp-for="edited" class="form-control" />
                <span asp-validation-for="edited" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="url" class="control-label"></label>
                <input asp-for="url" class="form-control" />
                <span asp-validation-for="url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
